void sort012(int *arr, int n)
{
   // Dutch Flag Algo
    int low=0;
    int mid=0;
    int high=n-1;
  while(mid<=high)
    {
        if(arr[mid]==0 )
        {
            swap(arr[low],arr[mid]);
            low++;
            mid++;
        }
       else if(arr[mid]==1)
       {
           mid++;
       }
      else if(arr[mid]==2)
      {
          swap(arr[high],arr[mid]);
              high--; // mid++ nhi kiye kyuki high se jo swap hua h wo mis ho jaega
      }
    }
    
}
